<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rynkbit.tk.coffeelist.admin.SettingsManagementFragment">

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/admin_changePassword"
            android:shadowRadius="2"
            android:id="@+id/btnAdminChangePassword"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/admin_setProtocolPath"
            android:shadowRadius="2"
            android:id="@+id/btnAdminSetProtocolPath"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/admin_createBackup"
            android:shadowRadius="2"
            android:id="@+id/btnAdminCreateBackup"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
